<div class="hidden md:block">
{{#gt pagination.pageCount 1}}
  <ul class="flex flex-wrap items-center md:mr-4 mr-0 justify-evenly overflow-hidden mb-4">
    {{#paginate pagination type="first"}}
      <div class="col-auto"><a href="?p={{n}}"><button class="btn">First</button></a></div>
    {{/paginate}}
    {{#paginate pagination type="previous"}}
      <div class="col-auto"><a href="?p={{n}}"><button class="btn">Previous</button></a></div>
    {{/paginate}}
    {{#paginate pagination type="middle" limit="9"}}
      <div class="{{#if active}}active{{/if}} col"><a href="?p={{n}}"><button class="btn">{{n}}</button></a>
      </div>
    {{/paginate}}
    {{#paginate pagination type="next"}}
      <div class="col-auto"><a href="?p={{n}}"><button class="btn">Next</button></a></div>
    {{/paginate}}
    {{#paginate pagination type="last"}}
      <div class="col-auto"><a href="?p={{n}}"><button class="btn">Last</button></a></div>
    {{/paginate}}
  </ul>
{{/gt}}
</div>
