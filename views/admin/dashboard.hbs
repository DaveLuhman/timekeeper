<div class="block">
    <div class="flex-row grow">
        <div id="navBar" class="flex-row">
            {{> admin/_header}}
        </div>
        <div id="bodyRoot" class="flex flex-row gap-10 ">
            <div id="viewsMenu">
                {{> admin/_views}}
            </div>
            <div class="grow gap-4" id="entryRoot">
                {{#or week timecards}}
                    <div class="mb-10 rounded-lg border-2">
                        {{> admin/_timeTable}}
                    </div>
                {{/or}}
                {{#if roster}}
                    {{> admin/_roster}}
                {{/if}}
            </div>
        </div>
        <div id="pagination" class="flex flex-row justify-evenly">
            {{#if pagination}}
                {{> admin/_pagination}}
            {{/if}}
        </div>
    </div>
</div>

<style>
    .max-h-0 {
        max-height: 0;
    }

    .group:focus .group-focus\:max-h-40 {
        max-height: 10rem;
    }
</style>